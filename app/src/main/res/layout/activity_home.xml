<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
       >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kadwa"
            android:text="Scaney."
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:background="#5648FC"
        />

    <!-- Search Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="#E1DFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/baseline_search_24"
            android:drawableTint="#5648FC"
            android:textColor="#5648FC"
            android:textColorHint="#5648FC"
            android:drawablePadding="8dp"
            android:hint="Search your File..."
            android:padding="12dp" />
    </androidx.cardview.widget.CardView>

    <!-- Tools Section -->
    <LinearLayout
        android:id="@+id/tools_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <LinearLayout
            android:id="@+id/scanNewButton"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:gravity="center"
            android:orientation="vertical"
            >
        <ImageView
            android:id="@+id/btn_smart_scan"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/scan_image"
            android:padding="30dp"
            app:cardCornerRadius="8dp"
            android:contentDescription="Smart Scan"
            android:background="@drawable/layout_backgrounds"
            android:backgroundTint="#E1DFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Smart Scan"
                android:textStyle="bold"
                android:textColor="#5648FC"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    <LinearLayout
        android:id="@+id/scanIdButton"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/btn_id_card"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/card_scan"
            android:padding="30dp"
            android:background="@drawable/layout_backgrounds"
            android:backgroundTint="#E1DFFF"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="ID Card"
            android:textColor="#5648FC"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_recent_documents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Documents"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tools_section"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See All"
        android:textSize="16sp"
        android:textColor="#5648FC"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/tv_recent_documents"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_recent_documents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_recent_documents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
