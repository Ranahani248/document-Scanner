<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E1DFFF"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/selectedImagesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/selectedImagesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text=" image(s) selected"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/selectedCancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/cancel_drawable"
                app:layout_constraintBottom_toBottomOf="@id/selectedImagesText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/selectedImagesText" />
        </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/result_info_recycle"
                android:layout_marginVertical="50dp"/>




        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bottomNavigationLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#5648FC"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/homeButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="Home"
                android:textColor="@color/white"
                app:drawableTint="@color/white"
                app:drawableTopCompat="@drawable/baseline_home_24" />
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/shareButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="Share"
                android:textColor="@color/white"
                app:drawableTint="@color/white"
                app:drawableTopCompat="@drawable/baseline_share_24"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/saveButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="Save"
                android:textColor="@color/white"
                app:drawableTint="@color/white"
                app:drawableTopCompat="@drawable/baseline_download_24"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/scan_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add"
                android:onClick="onScanButtonClicked"/>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/selectedNavigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#5648FC"
        android:visibility="gone"
        android:onClick="EmptyClickListener"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        >
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/selectedDelete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="Delete"
                android:textColor="@color/white"
                app:drawableTint="@color/white"
                app:drawableTopCompat="@drawable/baseline_delete_24" />
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/selectedShare"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="Share"
                android:textColor="@color/white"
                app:drawableTint="@color/white"
                app:drawableTopCompat="@drawable/baseline_share_24"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/selectedSave"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="Save"
                android:textColor="@color/white"
                app:drawableTint="@color/white"
                app:drawableTopCompat="@drawable/baseline_download_24"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shareAs"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="#6559FF"
        android:visibility="gone"
        android:onClick="EmptyClickListener"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/shareAsImage"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:text="Share as Image"
            android:paddingStart="10dp"
            android:drawablePadding="20dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:drawableTint="@color/white"
            android:drawableStart="@drawable/baseline_image_24"/>
        <TextView
            android:id="@+id/shareAsPdf"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Share as Pdf"
            android:drawablePadding="20dp"
            android:textColor="@color/white"
            android:onClick="onSharePdfButtonClicked"
            android:textSize="22sp"
            android:drawableTint="@color/white"
            android:drawableStart="@drawable/baseline_picture_as_pdf_24"/>
        <TextView
            android:id="@+id/shareAsWord"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Share as Word"
            android:drawablePadding="20dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:onClick="onShareDocButtonClicked"
            android:drawableTint="@color/white"
            android:drawableStart="@drawable/word"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/saveAs"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:visibility="gone"
        android:onClick="EmptyClickListener"
        android:background="#6559FF"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/saveAsImage"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:text="Save as Images"
            android:onClick="onSaveImageButtonClicked"
            android:paddingStart="10dp"
            android:drawablePadding="20dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:drawableTint="@color/white"
            android:drawableStart="@drawable/baseline_image_24"/>
        <TextView
            android:id="@+id/saveAsPdf"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Save as Pdf"
            android:onClick="onSavePdfButtonClicked"
            android:drawablePadding="20dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:drawableTint="@color/white"
            android:drawableStart="@drawable/baseline_picture_as_pdf_24"/>
        <TextView
            android:id="@+id/saveAsWord"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Save as Word"
            android:drawablePadding="20dp"
            android:textColor="@color/white"
            android:onClick="onSaveDocButtonClicked"
            android:textSize="22sp"
            android:drawableTint="@color/white"
            android:drawableStart="@drawable/word"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>